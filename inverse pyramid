import java.util.*;

class inverse{
    public static void main(String[] args) 
{
        Scanner sc = new Scanner(System.in);
        int n, i, j;
        System.out.println("Enter the number:");
        n = sc.nextInt();
        for(i=n;i>=1;i--)
{
for(j=0;j<=n-i;j++)
{
System.out.print(" ");
}

for(int k=1;k<=2*i-1;k++)
{
System.out.print("*");
}
System.out.println();
}
}
}
